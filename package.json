{
	"name": "@basicdays/maven-toolchains-generator",
	"packageManager": "yarn@3.2.2",
	"description": "Tool to autogenerate Maven's toolchains.xml file based on JEnv",
	"license": "MIT",
	"author": "BasicDays <info@basicdays.com> (https://basicdays.com)",
	"files": [
		"/lib",
		"!/lib/test",
		"!/lib/**/*.test.js",
		"!**/*.d.ts.map"
	],
	"scripts": {
		"format": "prettier --write ."
	},
	"dependencies": {
		"xml2js": "^0.4.23"
	},
	"devDependencies": {
		"@types/eslint": "^8",
		"@types/prettier": "^2",
		"@types/xml2js": "^0",
		"eslint": "^8.22.0",
		"prettier": "^2.7.1",
		"typescript": "^4.7.4"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended"
		]
	},
	"prettier": {
		"useTabs": true
	}
}
